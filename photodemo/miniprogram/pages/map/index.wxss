/* pages/map/index.wxss */
.info {
  width: 325px;
  height: 120px;
  display: flex;
  padding: 10px;
  background: #74b9ff;
  margin: 50px auto;
  border-radius: 20px;
}
.info .img {
  width: 160px;
  height: 120px;
  line-height: 140rpx;
  border-radius: 20px;
}
.info .txt {
  height: 100%;
  color: #fff;
  margin-left: 10rpx;
}
.info .txt .text1 {
  margin: 8px;
  font-size: 12px;
}
.switchbtn {
  display: flex;
  width: 80px;
  height: 30px;
  margin: 0 5px;
  position: absolute;
  top: 10px;
  right: 10px;
}
.switchbtn .leftbtn {
  width: 30px;
  height: 30px;
  margin: 0 5px;
}
.switchbtn .rightbtn {
  width: 30px;
  height: 30px;
  margin: 0 5px;
}
.search {
  display: flex;
  position: absolute;
  top: 12px;
  left: 12px;
}
.search .tips {
  width: 30px;
  height: 30px;
  margin: 0px 5px;
}
.search .searchview {
  width: 100px;
  height: 30px;
  border-radius: 8px;
  background: #fff;
  color: gray;
}
.search .searchview .searchbtn {
  width: 25px;
  height: 25px;
  margin-top: 2px;
  margin-left: 5px;
}
.search .facouslocation {
  width: 30px;
  height: 30px;
  margin: 0px 5px;
}
